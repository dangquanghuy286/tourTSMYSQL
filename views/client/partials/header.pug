header.header.bg-white.shadow-sm.py-2.sticky-top
    .container
        .row.align-items-center
            // Logo
            .col-md-3.col-6
                a(href="/" class="d-flex align-items-center text-decoration-none")
                    img(src="/images/TVLK.png" alt="MusicApp Logo" class="logo me-2")

            // Menu + Search
            .col-md-6.d-none.d-md-flex.align-items-center.justify-content-center
                // Menu
                nav.inner-menu.me-4
                    ul.nav
                        li.nav-item
                            a.nav-link.text-dark.fw-medium(href="/") Home
                        li.nav-item
                            a.nav-link.text-dark.fw-medium(href="/tours") Tours
                        li.nav-item
                            a.nav-link.text-dark.fw-medium(href="/about") About
                        li.nav-item
                            a.nav-link.text-dark.fw-medium(href="/contact") Contact

                // Search form
                .box-search.flex-grow-1.position-relative
                    form(action="/search/result" method="GET" class="d-flex")
                        input(type="text" name="keyword" value=keyword class="form-control rounded-pill px-3 search-input" placeholder="üîç Search...")
                    
                    // Suggest dropdown
                    .inner-suggest.position-absolute.bg-white.shadow-sm.rounded.mt-1.w-100(style="display:none;")
                        .inner-list.p-2
                            p.text-muted.mb-0 G·ª£i √Ω t√¨m ki·∫øm...

            // User info
            .col-md-3.col-6.text-end
                if user
                    span.me-3.fw-semibold.text-dark Hi, #{user.name}!
                    a(href="/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3") Logout
                else
                    a(href="/login" class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2") Login
                    a(href="/register" class="btn btn-sm btn-primary rounded-pill px-3") Register
